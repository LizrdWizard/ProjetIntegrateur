<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/navy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="13dp"
                android:id="@+id/boutonFooter1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_inventaire"
                android:onClick="bInit"/>

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="13dp"
                android:id="@+id/boutonFooter2"
                android:background="@drawable/button_compte"
                android:layout_gravity="center_vertical"
                android:onClick="bInit"/>

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"
                android:id="@+id/boutonFooter3"
                android:background="@drawable/button_reparation"
                android:onClick="bInit"/>

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="13dp"
                android:id="@+id/boutonFooter4"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_panier"
                android:onClick="bInit"/>

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="15dp"
                android:id="@+id/boutonFooter5"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_panier2"
                android:onClick="bInit"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>